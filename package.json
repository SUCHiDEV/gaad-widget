{
  "name": "gaad-widget",
  "version": "3.0.0-alpha",
  "description": "Display a banner-link to promote Global Accessibility Awareness Day (GAAD). Display the banner for a period before and after the day.",
  "author": {
    "name": "Nick Freear {@nfreear}"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nfreear/gaad-widget"
  },
  "dependencies": {
    "datejs": "^1.0.0-rc3",
    "icalendar": "^0.7.1"
  },
  "devDependencies": {
    "browserify": "^14.4.0",
    "csslint": "^1.0.5",
    "derequire": "^2.0.6",
    "exorcist": "^0.4.0",
    "semistandard": "^11.0.0",
    "uglify-js": "^2.8.26"
  },
  "engines": {
    "node": ">= 4.0.0"
  },
  "main": "./index.js",
  "bin": {
    "gaad": "./bin/gaad.js"
  },
  "scripts": {
    "build": "browserify index.js --debug | exorcist build/GAAD.widget.js.map > build/GAAD.widget.js",
    "x2-build": "browserify index.js --standalone Foo --debug | exorcist build/GAAD.widget.js.map | derequire > build/GAAD.widget.js",
    "x-install-legacy-datejs": "mkdir x_legacy; npm i --prefix x_legacy https://github.com/datejs/Datejs#8164739566",
    "x-build": "uglifyjs src/c*.js x_legacy/node_modules/Datejs/build/date.js src/w*.js --comments=/^[!*]/ -bo build/GAAD.widget.js",
    "x-build-sa": "uglifyjs src/c*.js node_modules/superagent/superagent.js src/w*.js --comments=/^[!*]/ -bo build/GAAD.sa.js",
    "build-min": "uglifyjs build/*.widget.js --comments=/^[!]/ -mco build/GAAD.widget.min.js",
    "test": "semistandard && csslint style"
  },
  "semistandard": {
    "ignore": [ "build/", "build-BAK/" ]
  },
  "//": {
    "Datejs-legacy": "https://github.com/datejs/Datejs#8164739566",
    "superagent": "^3.5.2"
  }
}
