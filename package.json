{
  "name": "gaad-widget",
  "version": "3.0.0-beta",
  "description": "Display a banner-link to promote Global Accessibility Awareness Day (GAAD). Display the banner for a period before and after the day.",
  "license": "MIT",
  "browser": "build/GAAD.widget.js",
  "main": "./index.js",
  "author": "Nick Freear {@nfreear}",
  "repository": "https://github.com/nfreear/gaad-widget",
  "bugs": "https://github.com/nfreear/gaad-widget/issues",
  "homepage": "http://nick.freear.org.uk/2017/05/14/gaad-widget.html?utm_source=npm",
  "dependencies": {
    "datejs": "^1.0.0-rc3",
    "icalendar": "^0.7.1"
  },
  "devDependencies": {
    "browserify": "^14.4.0",
    "csslint": "^1.0.5",
    "derequire": "^2.0.6",
    "exorcist": "^0.4.0",
    "semistandard": "^11.0.0",
    "uglify-js": "^2.8.26"
  },
  "engines": {
    "node": ">= 4.0.0"
  },
  "bin": {
    "gaad": "./bin/gaad.js"
  },
  "scripts": {
    "build": "node bin/gaad.js && npm run browserify && npm run uglify",
    "browserify": "browserify index.js --debug | exorcist build/GAAD.widget.js.map > build/GAAD.widget.js",
    "uglify": "uglifyjs build/*.widget.js --comments=/^[!]/ -mco build/GAAD.widget.min.js",
    "test": "semistandard && csslint style"
  },
  "semistandard": {
    "ignore": [
      "build/"
    ]
  },
  "keywords": [
    "accessibility",
    "a11y",
    "browser-widget",
    "date",
    "datejs",
    "icalendar",
    "event",
    "day",
    "international",
    "GAAD"
  ],
  "//": {
    "Datejs-legacy": "https://github.com/datejs/Datejs#8164739566"
  }
}
