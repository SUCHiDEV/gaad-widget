{
  "name": "gaad-widget",
  "version": "3.2.0-beta",
  "description": "Display a banner-link to promote Global Accessibility Awareness Day (GAAD). Display the banner for a period before and after the day.",
  "license": "MIT",
  "browser": "dist/gaad-widget.js",
  "unpkg": "dist/gaad-widget.js",
  "main": "./index.js",
  "author": "Nick Freear {@nfreear}",
  "repository": "https://github.com/nfreear/gaad-widget",
  "bugs": "https://github.com/nfreear/gaad-widget/issues",
  "homepage": "http://nick.freear.org.uk/2017/05/14/gaad-widget.html?utm_source=npm",
  "dependencies": {
    "datejs": "^1.0.0-rc3",
    "icalendar": "^0.7.1",
    "node-analytics-ga": "git://github.com/nfreear/node-analytics-ga#918d458d8a"
  },
  "devDependencies": {
    "browserify": "^14.4.0",
    "csslint": "^1.0.5",
    "exorcist": "^0.4.0",
    "live-server": "^1.2.0",
    "pa11y-ci": "^1.3.1",
    "replace": "^0.3.0",
    "semistandard": "^11.0.0",
    "uglify-js": "^2.8.26"
  },
  "engines": {
    "node": ">= 4.0.0"
  },
  "bin": {
    "gaad": "./bin/gaad.js"
  },
  "scripts": {
    "build": "rm dist/* && bin/gaad.js && bin/_ver.js && npm run browserify && npm run uglify",
    "browserify": "browserify index.js --no-bf --debug | exorcist dist/gaad-widget.js.map > dist/gaad-widget.js",
    "uglify": "uglifyjs dist/*-widget.js --comments=/^[!]/ -mco dist/gaad-widget.min.js",
    "start": "live-server --port=9001 -V",
    "serve-ci": "live-server --port=9001 -V --no-browser",
    "pa11y": "pa11y --standard WCAG2AAA http://127.0.0.1:9001/embed/?gaadwidget=force&_ua=pa11y",
    "pa11y-ci": "pa11y-ci --config .pa11yci.json",
    "pa11y-help": "pa11y --version && pa11y --help",
    "test": "semistandard && csslint style"
  },
  "semistandard": {
    "ignore": [
      "dist/"
    ]
  },
  "keywords": [
    "accessibility",
    "a11y",
    "campaign",
    "browser-widget",
    "date",
    "datejs",
    "icalendar",
    "event",
    "day",
    "international",
    "GAAD"
  ],
  "files": [
    "index.js",
    "dist/",
    "data/",
    "src/",
    "style/"
  ],
  "x-build-js-size": "8.47kB",
  "//": {
    "Datejs-legacy": "https://github.com/datejs/Datejs#8164739566",
    "universal-ga": "^1.1.0"
  }
}
